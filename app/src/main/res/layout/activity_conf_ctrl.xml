<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_conf_ctrl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wong.tissonvc_2.ui.activity.ConfCtrlActivity">

    <EditText
        android:id="@+id/chairmanPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:digits="1234567890"
        android:inputType="number"
        android:hint="chairman pwd"/>


    <Button
        android:id="@+id/applyChairman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chairmanPwd"
        android:layout_marginBottom="10dp"
        android:text="apply"/>

    <Button
        android:id="@+id/releaseChairman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/applyChairman"
        android:text="release"/>

    <EditText
        android:id="@+id/attendNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/applyChairman"
        android:hint="attendeeNum"/>

    <Button
        android:id="@+id/addAttendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/attendNum"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/attendNum"
        android:text="add"
        />

    <Button
        android:id="@+id/delAttend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/addAttendBtn"
        android:layout_toRightOf="@id/addAttendBtn"
        android:layout_marginLeft="20dp"
        android:text="delete"
        />


    <Button
        android:id="@+id/delayConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:text="postpone"
        android:layout_below="@+id/attendNum"
        />


    <Button
        android:id="@+id/broadcastConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delayConf"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="broadcast"
        />



    <Button
        android:id="@+id/unbroadcastConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/broadcastConf"
        android:layout_toRightOf="@id/broadcastConf"
        android:layout_marginLeft="40dp"
        android:text="unbroadcast"
        />



    <Button
        android:id="@+id/recallAttended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/broadcastConf"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="recallAttendee"
        />


    <Button
        android:id="@+id/hangUpAttended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/recallAttended"
        android:layout_toRightOf="@id/recallAttended"
        android:layout_marginLeft="40dp"
        android:text="hangUpAttendee"
        />

    <Button
        android:id="@+id/muteAttended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recallAttended"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="mute/cancel"
        />

    <Button
        android:id="@+id/watchAttended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/muteAttended"
        android:layout_toRightOf="@id/muteAttended"
        android:layout_marginLeft="40dp"
        android:text="watchAttendee"
        />


    <Button
        android:id="@+id/setPresent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/muteAttended"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="set present"
        />

    <Button
        android:id="@+id/endConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="endConf"
        android:layout_above="@+id/broadcastConf"
        android:layout_toEndOf="@+id/attendNum"/>

    <Button
        android:id="@+id/confDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="confList"
        android:layout_alignBaseline="@id/delayConf"
        android:layout_toRightOf="@id/endConf"/>


</RelativeLayout>
