<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/menu_bar_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/te_state_menu_top_left"
            android:gravity="center" >

            <ImageView
                android:id="@+id/more_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0.50dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_extend" />
        </RelativeLayout>

        <View
            android:id="@+id/line_more"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

        <RelativeLayout
            android:id="@+id/video_mic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/video_mic_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0.50dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_mic" />
        </RelativeLayout>

        <View
            android:id="@+id/line_video_mic"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />


        <RelativeLayout
            android:id="@+id/video_speaker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/video_speaker_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0.50dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_phone_menu_speaker" />
        </RelativeLayout>

        <View
            android:id="@+id/line_video_speaker"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

        <RelativeLayout
            android:id="@+id/switch_audio_route"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/switch_audio_route_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0.50dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_menu_route_earpiece"/>
        </RelativeLayout>

        <View
            android:id="@+id/line_switch_audio_route"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />



        <RelativeLayout
            android:id="@+id/audio_switch_video"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/audio_switch_video_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0.50dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_audio_switch_video" />
        </RelativeLayout>

        <View
            android:id="@+id/line_audio_switch_video"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />

        <RelativeLayout
            android:id="@+id/redial_board"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/te_pad_menu_item"
            android:gravity="center" >

            <ImageView
                android:id="@+id/redial_board_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0.50dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_dial" />
        </RelativeLayout>

        <View
            android:id="@+id/line_redial_board"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@drawable/te_line_portrait" />



        <RelativeLayout
            android:id="@+id/video_hangup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/te_state_menu_top_right"
            android:gravity="center" >

            <ImageView
                android:id="@+id/video_hangup_img"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0.50dp"
                android:duplicateParentState="true"
                android:src="@drawable/te_state_hangup" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:id="@+id/line_menu_bar_bottom"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/te_line_crosswise" />

    <RelativeLayout
        android:id="@+id/menu_bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="34.50dp"
        android:background="@drawable/te_state_menu_bottom_left_right_normal"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/remote_number_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="0.50dp"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="3.75dp"
                android:paddingStart="3.75dp"
                android:text="@string/remote_number"
                android:textColor="#9c9c9c"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/remote_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9c9c9c"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/titlemenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0.50dp"
            android:layout_marginTop="0.50dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.25dp"
                android:gravity="center"
                android:text="@string/zero_begin_time"
                android:textColor="#9c9c9c"
                android:textSize="13sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/vcConf"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="conf"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/dataShare"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="share"
                android:textColor="@color/black"/>


        </LinearLayout>

        <TextView
            android:id="@+id/audio_time1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@string/zero_begin_time"
            android:textColor="#898989"
            android:textSize="10.50dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>